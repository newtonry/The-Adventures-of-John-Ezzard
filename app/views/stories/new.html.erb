<h2>Add a story about John</h2>
<h5>Please read the <a href="<%= about_url %>">about page</a> before posting</h5>
<form action="<%= stories_url %>" method="POST" role="form">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" id="authenticity_token">
	
	<div class="form-group">
		<label for="story_title">Title:</label>
		<input type="text" class="form-control" name="story[title]" id="story_title" value ="<%= @story.title%>">
	</div>

	<div class="form-group">
		<label for="story_body">Body:</label>
		<textarea class="form-control" rows="7" name="story[body]" id="story_body" value ="<%= @story.body%>"></textarea>
	</div>

	<p><input type="submit" class="btn btn-default" value="Add Story"></p>
</form>